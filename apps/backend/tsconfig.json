{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@repo/db/*": ["../packages/db/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
